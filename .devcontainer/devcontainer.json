{
	"name": "cpp-oop-labs-mai",
	"build": {
		"dockerfile": "Dockerfile"
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools",
				"twxs.cmake"
			],
			"settings": {
				"cmake.configureOnOpen": false,
				"cmake.generator": "Ninja"
			}
		}
	},

	"remoteUser": "vscode",
    "mounts": [
        "source=${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
    ],
	"postCreateCommand": "echo '=== Environment Ready ===' && g++ --version && cmake --version"
}